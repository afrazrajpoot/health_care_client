generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(uuid())
  firstName     String?
  lastName      String?
  phoneNumber   String?
  email         String?    @unique
  password      String?
  role          String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  emailVerified DateTime?
  image         String?
  physicianId   String?
  accounts      Account[]
  Document      Document[]
  sessions      Session[]

  @@map("users")
}

model Account {
  id                 String  @id @default(uuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  refresh_expires_at Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Document {
  id           String  @id @default(cuid())
  dob          String?
  doi          String
  patientName  String
  status       String
  claimNumber  String
  gcsFileLink  String
  briefSummary String?
  whatsNew     Json?
  blobPath     String?
  fileName     String?
  fileHash     String? @db.VarChar(64)
  mode         String? @default("wc")
  reportDate   DateTime?
  originalName String?
  physicianId  String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  ur_denial_reason String?

  // Relations
  summarySnapshot SummarySnapshot?
  adl             ADL?
  documentSummary DocumentSummary?
  tasks           Task[]
  bodyPartSnapshots BodyPartSnapshot[]
  
  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  @@unique([fileHash, userId])
  @@map("documents")
}

model BodyPartSnapshot {
  id              String   @id @default(cuid())
  document        Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  documentId      String
  
  // ðŸ†• MODE FIELD - Essential for distinguishing between WC and GM
  mode            String   @default("wc")  // "wc" or "gm"
  
  // ðŸ†• FLEXIBLE FIELDS - Adapts based on mode
  bodyPart        String?  // Used for WC mode (body parts)
  condition       String?  // Used for GM mode (conditions/diseases)
  
  // ðŸ†• GM-SPECIFIC FIELDS
  conditionSeverity String? // mild/moderate/severe, acute/chronic (GM mode)
  symptoms        String?  // Key symptoms reported (GM mode)
  medications     String?  // Current/prescribed medications (GM focus)
  chronicCondition Boolean @default(false) // Is this a chronic condition? (GM mode)
  comorbidities   String?  // Other existing conditions (GM mode)
  lifestyleRecommendations String? // Diet/exercise/smoking cessation etc. (GM mode)
  
  // ðŸ†• WC-SPECIFIC FIELDS  
  injuryType      String?  // sprain/strain/fracture etc. (WC mode)
  workRelatedness String?  // Confirmed/probable/possible (WC mode)
  permanentImpairment String? // Permanent disability rating (WC mode)
  mmiStatus       String?  // Maximum Medical Improvement status (WC mode)
  returnToWorkPlan String? // RTW plan/timing (WC mode)
  
  // ðŸŽ¯ SHARED CLINICAL FIELDS (used in both modes)
  dx              String   // Diagnosis
  keyConcern      String   // Primary concern
  nextStep        String?  // Next steps/recommendations
  urDecision      String?  // Utilization review decision
  recommended     String?  // Treatment recommendations
  aiOutcome       String?  // AI-predicted outcome
  consultingDoctor String? // Treating/consulting physician
  
  // ðŸŽ¯ SHARED DETAIL FIELDS
  keyFindings     String?  // Important clinical findings
  treatmentApproach String? // Treatment approach/plan
  clinicalSummary String?  // One-line clinical summary
  referralDoctor  String?  // Referral physician if mentioned
  
  // ðŸ†• QUALITY OF LIFE IMPACT (both modes, different emphasis)
  adlsAffected    String?  // Activities of daily living affected
  painLevel       String?  // Pain scale 0-10 or description
  functionalLimitations String? // General functional limitations
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("body_part_snapshots")
  @@index([mode])
  @@index([documentId])
}

model SummarySnapshot {
  id                String   @id @default(cuid())
  
  // ðŸ†• UPDATED: Make all fields optional to match function requirements
  dx                String?  // Changed from required to optional
  keyConcern        String?  // Changed from required to optional
  nextStep          String?  // Changed from required to optional
  bodyPart          String?  // Changed from required to optional
  
  urDecision        String?
  recommended       String?
  aiOutcome         String?
  consultingDoctor  String?
  keyFindings       String?
  treatmentApproach String?
  clinicalSummary   String?
  referralDoctor    String?
  
  // Relation back to Document - FIXED: Added onDelete: Cascade
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  documentId String   @unique
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("summary_snapshots")
}

model DocumentSummary {
  id         String   @id @default(cuid())
  type       String
  date       DateTime
  summary    String
  // FIXED: Added onDelete: Cascade
  documentId String   @unique
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("document_summaries")
}

model ADL {
  id              String   @id @default(cuid())
  document        Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  documentId      String   @unique
  
  // ðŸ†• MODE FIELD
  mode            String   @default("wc")  // "wc" or "gm"
  
  // ðŸŽ¯ SHARED FIELDS
  adlsAffected    String
  workRestrictions String
  
  // ðŸ†• GM-SPECIFIC FIELDS
  dailyLivingImpact String? // Impact on daily living activities (GM focus)
  functionalLimitations String? // General functional limitations (GM focus)
  symptomImpact   String?  // Impact of symptoms on function (GM focus)
  qualityOfLife   String?  // Overall quality of life impact (GM focus)
  
  // ðŸ†• WC-SPECIFIC FIELDS
  workImpact      String?  // Specific work impact details (WC focus)
  physicalDemands String?  // Physical demands affected (WC focus)
  workCapacity    String?  // Work capacity assessment (WC focus)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("adls")
  @@index([mode])
  @@index([documentId])
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?
  email     String?
  action    String
  ipAddress String?
  userAgent String?
  path      String?
  method    String?
  timestamp DateTime @default(now())

  @@map("audit_logs")
}

model PatientQuiz {
  id              String   @id @default(cuid())
  patientName     String
  dob             String?
  doi             String?
  lang            String
  bodyAreas       String?
  newAppointments Json?
  refill          Json?
  adl             Json
  therapies       Json?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  claimNumber     String?

  @@map("patient_quizzes")
}

model FailDocs {
  id           String  @id @default(cuid())
  reason       String
  physicianId  String?
  claimNumber  String?
  documentText String?
  doi          String?
  patientName  String?
  blobPath     String?
  fileHash     String?
  fileName     String?
  gcsFileLink  String?
  dob          String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("fail_docs")
}

model IntakeLink {
  id            String   @id @default(cuid())
  token         String   @unique
  patientName   String
  dateOfBirth   DateTime
  visitType     String   @default("Follow-up")
  language      String   @default("en")
  mode          String   @default("tele")
  bodyParts     String?
  expiresInDays Int      @default(7)
  requireAuth   Boolean  @default(true)
  expiresAt     DateTime
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  claimNumber   String?

  @@map("intake_links")
}

model Task {
  id             String    @id @default(cuid())
  description    String
  department     String
  status         String    @default("Pending")
  dueDate        DateTime?
  patient        String
  reason         String?
  actions        String[]  @default(["Claim", "Complete"])
  sourceDocument String?
  claimNumber    String?
  
  quickNotes Json? @default("{\"status_update\": \"\", \"details\": \"\", \"one_line_note\": \"\"}")
  followUpTaskId  String?
  
  // FIXED: Added onDelete: Cascade
  documentId  String?
  document    Document? @relation(fields: [documentId], references: [id], onDelete: Cascade)
  physicianId String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("tasks")
}

model WorkflowStats {
  id                 String   @id @default(cuid())
  date               DateTime @default(now())
  referralsProcessed Int      @default(0)
  rfasMonitored      Int      @default(0)
  qmeUpcoming        Int      @default(0)
  payerDisputes      Int      @default(0)
  externalDocs       Int      @default(0)
  intakes_created    Int      @default(0)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@map("workflow_stats")
}

model Subscription {
  id           String   @id @default(cuid())
  physicianId  String
  plan         String   // 'basic', 'pro', 'premium'
  amountTotal  Int      // Amount in cents
  status       String   // 'active', 'canceled', 'past_due'
  stripeCustomerId String?
  stripeSubscriptionId String? // For recurring subscriptions
  documentParse    Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("subscriptions")
}

model CheckoutSession {
  id              String   @id @default(uuid())
  stripeSessionId String   @unique
  physicianId     String
  plan            String
  amount          Int
  status          String
  expiresAt       DateTime
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([stripeSessionId])
  @@index([physicianId])
  @@map("checkout_sessions")
}